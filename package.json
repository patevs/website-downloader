{
  "name": "website-downloader",
  "version": "1.0.0",
  "description": "Download a website's source code for offline browsing",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/website-downloader.git"
  },
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "updates": "script-progress node ./bin/checkUpdates",
    "release": "np"
  },
  "dependencies": {
    "website-scraper": "^4.2.2",
    "website-scraper-phantom": "^1.0.0",
    "website-scraper-puppeteer": "^0.1.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "chalk": "^4.1.0",
    "commitlint-config-gitmoji": "^1.0.1",
    "husky": "^4.3.8",
    "np": "^6.5.0",
    "script-progress": "^1.0.5"
  },
  "commitlint": {
    "extends": [
      "./node_modules/commitlint-config-gitmoji"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
