{
  "name": "website-downloader",
  "version": "2.0.0",
  "description": "Download a website's source code for offline browsing",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/website-downloader.git"
  },
  "exports": "./index.js",
  "type": "module",
  "engines": {
    "node": "^14.14.0 || >=16.0.0"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "node index.js",
    "updates": "script-progress node ./bin/checkUpdates",
    "release": "np"
  },
  "dependencies": {
    "website-scraper": "^5.0.0",
    "website-scraper-phantom": "^1.0.0",
    "website-scraper-puppeteer": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "chalk": "^5.0.1",
    "commitlint-config-gitmoji": "^2.2.5",
    "husky": "^7.0.4",
    "np": "^7.6.1",
    "script-progress": "^1.0.5"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  }
}
